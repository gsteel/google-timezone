{
    "name": "gsteel/google-timezone",
    "description": "Google Timezone API Client",
    "license": "MIT",
    "type": "library",
    "keywords": [],
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "homepage": "https://github.com/gsteel/google-timezone",
    "require": {
        "php": "~8.1 || ~8.2",
        "fig/http-message-util": "^1.1",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "*",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ext-curl": "*",
        "doctrine/coding-standard": "^12.0.0",
        "ergebnis/composer-normalize": "^2.33.0",
        "infection/infection": "^0.27.0",
        "laminas/laminas-diactoros": "^3.0.0",
        "php-http/curl-client": "^2.3.0",
        "php-http/discovery": "^1.19.1",
        "phpunit/phpunit": "^10.2.4",
        "psalm/plugin-phpunit": "^0.18.4",
        "react/child-process": "^0.6.5",
        "react/http": "^1.9.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.13.1"
    },
    "autoload": {
        "psr-4": {
            "GSteel\\GoogleTimezone\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GSteel\\GoogleTimezone\\Test\\Unit\\": "test/Unit",
            "GSteel\\GoogleTimezone\\Test\\Integration\\": "test/Integration"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "php-http/discovery": false
        },
        "platform": {
            "php": "8.1.99"
        },
        "sort-packages": true
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "check": [
            "phpcs",
            "psalm",
            "phpunit",
            "infection"
        ],
        "clean": [
            "composer normalize",
            "psalm --generate-baseline",
            "phpcbf"
        ],
        "static-analysis": "psalm --shepherd --stats"
    }
}
